 require 'tkcombobox'
 combo = TkCombobox.new(nil,'fg' => 'black','width' => 30)
 combo.entry['fg'] = 'blue'
 combo.entries = ['entry1', 'entry2', 'entry3']
 combo.select_proc = proc{|index,entry| print("index=#{index}, entry=#{entry}\n")}
 combo.pack
 Tk.mainloop

